{
  "name": "refa",
  "version": "0.0.0",
  "description": "A library for finite automata and regular expressions in the context of JS RegExp",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "check": "npx eslint --ignore-path .gitignore src/**/*.ts tests/**/*.ts scripts/**/*.ts && npx tsc --noEmit && cd tests && npx tsc --noEmit && cd ../scripts && npx tsc --noEmit",
    "test": "mocha -r ts-node/register 'tests/**/*.ts'",
    "build": "npx tsc",
    "build:unicode": "npx ts-node scripts/create-unicode.ts",
    "build:case-folding": "npx ts-node scripts/create-case-folding.ts"
  },
  "keywords": [
    "dfa",
    "nfa",
    "regex",
    "regexp",
    "regular",
    "expression"
  ],
  "author": "Michael Schmidt",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/mocha": "^7.0.2",
    "@types/node": "^12.12.31",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "chai": "^4.2.0",
    "eslint": "^6.8.0",
    "mocha": "^7.1.1",
    "ts-node": "^8.8.1",
    "typescript": "^3.8.3",
    "unicode-13.0.0": "^0.8.0"
  },
  "dependencies": {
    "regexpp": "^3.0.0"
  }
}
